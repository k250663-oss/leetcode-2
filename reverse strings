#include<stdio.h>
#include<string.h>

void reverse(){
    char word[50] = "hello";
    printf("%s" , word);
    int len = strlen(word);
   // for(int i =0 ; i<len ; i++){
     //   word[len-i] = word[i];
for(int i = 0; i < len - 1; i++){
    for(int j = 0; j < len - 1 - i; j++){
            char temp = word[j];
            word[j] = word[j+1];
            word[j+1] = temp;
        }
    }

    printf("\n\nreversed word:%s" , word);
}
int main(){
    reverse();
}
